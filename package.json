{
	"name": "obsidian-expair-plugin",
	"version": "0.1.0",
	"description": "Obsidian plugin for expanding text with abbreviations using AI, useful for quick note-taking on Obsidian and expanding into full text later.",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json"
	},
	"keywords": [
		"obsidian",
		"plugin",
		"expair",
		"text",
		"expand",
		"ai",
		"gpt"
	],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^16.11.6",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"builtin-modules": "3.3.0",
		"esbuild": "0.17.3",
		"obsidian": "latest",
		"prettier": "3.2.5",
		"tslib": "2.4.0",
		"typescript": "4.7.4"
	},
	"dependencies": {
		"openai": "^4.37.1",
		"uuid": "^10.0.0"
	}
}
